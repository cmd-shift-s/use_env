{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "camelcase": "off",
        "comma-dangle": "off",
        "no-case-declarations": "off",
        "space-before-function-paren": ["error", "never"]
    }
}
